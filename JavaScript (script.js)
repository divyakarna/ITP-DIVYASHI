// JavaScript for Slider
let images = [
  "images/slide1.jpg",  // Ensure these image paths are correct
  "images/slide2.jpg",
  "images/slide3.jpg"
];
let current = 0;

function changeSlide() {
  current = (current + 1) % images.length;  // Cycle through the images
  document.getElementById("slider-image").src = images[current];  // Change the image source
}

// Change the slide every 3 seconds
setInterval(changeSlide, 3000);

// Initial slider image
document.getElementById("slider-image").src = images[current];
